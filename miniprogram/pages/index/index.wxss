/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}

.container {
    height: 100%;
    width: 100%;
}

.head-bg {
    width: 100%;
    height: 600rpx;
}

.container-wrap {
    position: relative;
    background-image: linear-gradient(-10deg, #e5b2ca 0%, #7028e3 100%);
    width: 100%;
    height: calc(100% - 600rpx);
}

.logo-wrap {
    position: absolute;
    padding: 0;
    border-radius: 50%;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    border: 4rpx solid #ffffff;
    box-shadow: 2px 2px 5px #333333;
}

.logo-btn {
    width: 150rpx;
    height: 150rpx;
    background-image: url('https://s1.ax1x.com/2018/11/23/FFZqm9.jpg');
    background-size: 150rpx 148rpx;
}